# Minimal configuration for testing with OpenAI API key only
# Copy this to .env and add your actual API key

# Database (required)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ai_sales_agent

# AI Configuration (required for testing)
OPENAI_API_KEY=your_openai_api_key_here
AI_PROVIDER=openai

# Authentication (disabled for easy testing)
ENABLE_JWT_AUTH=false

# Redis (disabled - uses memory cache)
ENABLE_REDIS=false

# Application
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# Chatbot Integration (enabled for easy testing)
ENABLE_CHATBOT_MODE=true

# Optional - you can add these later for full functionality
# CURLEC_SECRET_KEY=your_curlec_secret_key
# CURLEC_PUBLISHABLE_KEY=your_curlec_publishable_key
# GOOGLE_CLIENT_ID=your_google_client_id
# GOOGLE_CLIENT_SECRET=your_google_client_secret
# SMTP_HOST=smtp.gmail.com
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password
